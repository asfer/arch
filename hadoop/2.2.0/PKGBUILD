pkgname=hadoop
pkgver=2.2.0
pkgrel=1
epoch=
pkgdesc="Open-source software for reliable, scalable, distributed computing"
arch=('x86_64')
url="http://hadoop.apache.org/"
license=('Apache')
groups=()
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=$(pkgname).install
changelog=
source=(http://mirrors.fe.up.pt/pub/apache/hadoop/common/$pkgname-$pkgver/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('25f27eb0b5617e47c032319c0bfd9962')

prepare() {
	cd "$srcdir/$pkgname-$pkgver"

    find . -name *.cmd -delete

    install -m 0775 -d logs
}

build() {
	:
}

check() {
	:
}

package() {
	mkdir -p "$pkgdir/opt/$pkgname"
	cp -R "$srcdir/$pkgname-$pkgver/." "$pkgdir/opt/$pkgname/"
}
